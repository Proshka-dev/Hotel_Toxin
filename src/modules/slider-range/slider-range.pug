//- Объявление миксина
//- Параметры: 
mixin mixSliderRange({label, min, max, minValue, maxValue, step, gap})
  .slider-range(data-min=min data-gap=gap )
    .slider-range__title
      .slider-range__label=label
      .slider-range__text 5 000₽ - 10 000₽
    .slider-range__slider
      .slider-range__progress-container
        .slider-range__progress
          .slider-range__thumb-left
          .slider-range__thumb-right
    .slider-range__inputs
      input.slider-range__min(type='range' min=min max=max value=minValue step=step)
      input.slider-range__max(type='range' min=min max=max value=maxValue step=step)