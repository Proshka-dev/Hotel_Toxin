//- Объявление миксина
mixin mixChart()
	.chart
		.chart__body
			svg.chart__diagram(viewbox='0 0 33 33')
				//- stroke-dasharray='0(заполнено) пропуск заполнено 100(пропуск)'
				//- радиус выбран таким, чтобы длина окружности была равна 100
				circle.chart__circle(r='15.9155' cx='50%' cy='50%' stroke='url(#gradient1)' stroke-dasharray='0 0 0 100' stroke-dashoffset='0' transform='rotate(270 16.5 16.5)')
				circle.chart__circle(r='15.9155' cx='50%' cy='50%' stroke='url(#gradient2)' stroke-dasharray='0 0.3 24.4 100' stroke-dashoffset='0' transform='rotate(270 16.5 16.5)')
				circle.chart__circle(r='15.9155' cx='50%' cy='50%' stroke='url(#gradient3)' stroke-dasharray='0 25.3 24.4 100' stroke-dashoffset='0' transform='rotate(270 16.5 16.5)')
				circle.chart__circle(r='15.9155' cx='50%' cy='50%' stroke='url(#gradient4)' stroke-dasharray='0 50.3 49.4 100' stroke-dashoffset='0' transform='rotate(270 16.5 16.5)')
				lineargradient#gradient1(gradienttransform='rotate(90)')
					stop(offset='0' stop-color='#919191')
					stop(offset='1' stop-color='#3D4975')
				lineargradient#gradient2(gradienttransform='rotate(0)')
					stop(offset='0' stop-color='#8BA4F9')
					stop(offset='1' stop-color='#BC9CFF')
				lineargradient#gradient3(gradienttransform='rotate(90)')
					stop(offset='0' stop-color='#66D2EA')
					stop(offset='1' stop-color='#6FCF97')
				lineargradient#gradient4(gradienttransform='rotate(0)')
					stop(offset='0' stop-color='#FFBA9C')
					stop(offset='1' stop-color='#FFE39C')
			.chart__textbox
				.chart__voices 260
				.chart__voices-label голосов
		ul.chart__legend-list
			li.chart__legend-item Великолепно
			li.chart__legend-item Хорошо
			li.chart__legend-item Удовлетворительно
			li.chart__legend-item Разочарован