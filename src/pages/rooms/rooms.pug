doctype html

-
	const headParams = {
		pageTitle: 'Поиск номеров',
		cssFile: 'css/rooms.css',
	};
+mixHead(headParams)

body

	//- Header
	-
		const headerParams = {
			buttonLightParams: {text: 'войти'},
			buttonDarkParams: {text: 'зарегистрироваться'},
		};
	+mixHeader(headerParams)

	//- Основная секция
	section.main
		.container
			.main__body
				.main__filters
					.main__dates
						.main__label
							+mixLabel({text: 'даты пребывания в отеле'})
					.main__guests
						.main__label
							+mixLabel({text: 'гости'})
					.main__slider
						.main__label
							+mixLabel({text: 'диапазон цены'})
					.main__rules
						.main__label
							+mixLabel({text: 'правила дома'})
					.main__accessibility
						.main__label
							+mixLabel({text: 'доступность'})
					.main__amenities
						.main__label
							+mixLabel({text: 'удобства номера'})
					.main__additional-amenities
						.main__label
							+mixLabel({text: 'дополнительные удобства'})
				.main__rooms
					.main__title Номера, которые мы для вас подобрали
					.main__items
						.main__item room1
						.main__item room2
						.main__item room3
						.main__item room4
						.main__item room5
						.main__item room6
						.main__item room7
						.main__item room8
						.main__item room9
						.main__item room10
						.main__item room11
						.main__item room12
					.main__pagination place_for_pagination

	//- Footer
	+mixFooter()

	script(src='js/rooms.js')
	