doctype html

+mixHead('Главная')

body
  include ../../modules/header/header.pug
  
  .uikit-demo
    .container
      //- Пример вставки картинки
      //- <img width="250" height="200" src="@img/cover.jpg" alt="">

      //- text-field
      .uikit-demo__item
        -
          let textFieldParams = {
            label: 'Text field',
            type: 'text',
            placeholder: 'Email (placeholder)'          };
        +mixTextField(textFieldParams)

      //- text-field-masked
      .uikit-demo__item
        -
          let textFieldMaskedParams = {
            label: 'Masked text field',
            type: 'date',
            placeholder: ''
          };
        +mixTextFieldMasked(textFieldMaskedParams)

      //- text-field-subscription
      .uikit-demo__item
        -
          let textFieldSubscriptionParams = {
            label: 'Subscription text field',
            type: 'text',
            placeholder: 'Email (placeholder)'
          };
        +mixTextFieldSubscription(textFieldSubscriptionParams)

      //- dropdown - c гостями
      .uikit-demo__item
        -
          let dropdownParams = {
            label: 'Dropdown',
            type: '1', // с гостями
            inputNames: ['select-value1', 'select-value2', 'select-value3']
          };
        +mixDropdown(dropdownParams)

      //- dropdown - с параметрами номера
      .uikit-demo__item
        -
          let dropdownParams2 = {
            label: 'Dropdown (type2)',
            type: '2', // с параметрами номера
            inputNames: ['select-value4', 'select-value5', 'select-value6']
          };
        +mixDropdown(dropdownParams2)
      
      //- dropdown-date-split
      //- !!!!!!!!!! отследить использование input id в коде
      //- !!!!!!!!!! также проверить уникальность id в прошлых примерах
      //- !!!!!!!!!! привязать инициализацию календаря к переданным id
      .uikit-demo__item
        -
          let dropdownSplitParams = {
            label1: 'Date dropdown split',
            label2: 'Date dropdown split',
            inputNames: ['input-split-name1', 'input-split-name2'],
            inputIDs: ['inputdate1', 'inputdate2']
          };
        +mixDropdownDateSplit(dropdownSplitParams)

      .uikit-demo__item
        +mixDropdownDateFilter('Filter date dropdown')
      .uikit-demo__item
        //- Параметры: vLabel, vItemsId, vItems
        +mixCheckboxListExp('Expandable checkbox list', ['chkbox1','chkbox2','chkbox3','chkbox4','chkbox5','chkbox6'],['завтрак', 'письменный стол', 'стул для кормления', 'кроватка', 'телевизор', 'шампунь'])
      .uikit-demo__item
        //- Параметры: vLabel, vItemsId, vItems
        +mixCheckboxList('Checkbox list', ['chkbox7','chkbox8','chkbox9'],['можно курить', 'можно с питомцами', 'можно пригласить гостей (до 10 человек)'])
      .uikit-demo__item
        //- Параметры: vLabel, vItemsId, vItems, vDescriptions
        +mixCheckboxListRich('Rich checkbox list', ['chkbox10','chkbox11'],['Широкий коридор', 'Помощник для инвалидов'],['Ширина коридоров в номере не менее 91 см.','На 1 этаже вас встретит специалист  и проводит до номера.'])
      .uikit-demo__item
        //- Параметры: vIcon, vTitle, vDescription, vHasLine
        +mixAdvantages('insert_emoticon', 'Комфорт', 'Шумопоглощающие стены', 'true')
        //- Параметры: vIcon, vTitle, vDescription, vHasLine
        +mixAdvantages('location_city', 'Удобство', 'Окно в каждой из спален', 'false')
      .uikit-demo__item
        //- Параметры: vIcon, vTitle, vDescription, vHasLine
        +mixRadioButtons('Radio buttons', 'Gender', ['radio1','radio2'], ['мужчина', 'женщина'])
      .uikit-demo__item
        //- Параметры: vLabel, vItemsId, vItems
        +mixToggle('Toggle', ['toggle1','toggle2'],['получать спецпредложения', 'получать спецпредложения'])
      .uikit-demo__item
        |Like button
        br
        br
        //- Параметры: vNumber, vCheckboxId ,vChecked
        +mixButtonLike('12', 'btnlike1','true')
        +mixButtonLike('25378', 'btnlike2','false')
      .uikit-demo__item
        |Rate button
        br
        br
        //- Параметры: vGroupName, vItemsId
        +mixButtonRate('starrategrp1',['starrate1','starrate2','starrate3','starrate4','starrate5'])
      .uikit-demo__item
        //- Параметры: vLabel, vMin, vMax, vMinValue, vMaxValue, vStep, vGap
        +mixSliderRange('Range slider', '1000', '12000', '2000', '10000', '50', '500')
      .uikit-demo__item
        |Buttons
        br
        br
        //- Параметры: vNumber, vCheckboxId ,vChecked
        +mixButtonDark('click me')
        +mixButtonLight('click me')
        +mixButtonClear('click me')
        +mixButtonArrow('Перейти к оплате')
      .uikit-demo__item
        //- Параметры: vLabel, vItemsId, vItems
        +mixBulletList('Bullet list', ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])
      .uikit-demo__item
        //- Параметры:
        +mixProductsList('Products list')
      .uikit-demo__item
        //- Параметры:
        +mixPagination('Pagination')

      .uikit-demo__item
        |Review
        -
          let reviewParams = {
            photo: '@img/review/review-photo1.jpg',
            name: 'Мурад Сарафанов',
            timeReview: '5 дней назад',
            text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
            numberLikes: '12',
            btnLikeId: 'btnlike2',
            liked: 'true'
          };
        +mixReview(reviewParams)

      .uikit-demo__item
        -
          let searchParams = {
            photo: '@img/review/review-photo1.jpg',
            name: 'Мурад Сарафанов',
            timeReview: '5 дней назад',
            text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
            numberLikes: '12',
            btnLikeId: 'btnlike2',
            liked: 'true'
          };
        +mixSearch(searchParams)
        
