						groupName: 'starrategrp1',
						inputIds: ['starrate1','starrate2','starrate3','starrate4','starrate5'],
					};
				+mixButtonRate(buttonRateParams)
			
			//- slider-range
			.uikit-demo__item
				-
					const sliderRangeParams = {
						label: 'Range slider',
						min: '1000',
						max: '12000',
						minValue: '2000',
						maxValue: '10000',
						step: '50',
						gap: '500'
					};
				+mixSliderRange(sliderRangeParams)
			
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'Buttons'})
				//- button-dark
				- const buttonDarkParams = {text: 'click me'};
				+mixButtonDark(buttonDarkParams)
				//- button-light
				-  const buttonLightParams = {text: 'click me'};
				+mixButtonLight(buttonLightParams)
				//- button-clear
				-  const buttonClearParams = {text: 'click me'};
				+mixButtonClear(buttonClearParams)
				//- button-arrow
				-  const buttonArrowParams = {text: 'Перейти к оплате'};
				+mixButtonArrow(buttonArrowParams)
			
			//- bullet-list
			.uikit-demo__item
				-
					const bulletListParams = {
						//label: 'Bullet list',
						items: ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'],
					};
				+mixBulletList(bulletListParams)
			
			//- products-list
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'Products list'})
				+mixProductsList()
			
			//- pagination
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'Pagination'})
				-
					const paginationParams = {
					};
				+mixPagination(paginationParams)

			//- review
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'Review'})
				-
					const reviewParams = {
						photo: '@img/review/review-photo1.jpg',
						name: 'Мурад Сарафанов',
						timeReview: '5 дней назад',
						text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
						buttonLikeParams: {
							numberOfLikes: '100',
							id: 'btnlike3',
							isChecked: 'true'
						},
					};
				+mixReview(reviewParams)

			//- search
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'search'})
				-
					const searchParams = {
						title: 'Найдем номера под ваши пожелания',
						dropdownSplitParams: {
							label1: 'Прибытие',
							label2: 'Выезд',
							inputs:[
								{id: 'inputdate3', name: 'date-from'},
								{id: 'inputdate4', name: 'date-to'},
							]
						},
						label1: ({text: 'гости'}),
						dropdownParams: {
							label: 'Гости',
							placeholder: 'Сколько гостей',
							type: '1', // с гостями
							inputNames: ['select-value7', 'select-value8', 'select-value9']
						},
						buttonArrowParams: {text: 'Подобрать номер'},
					};
				+mixSearch(searchParams)

			//- registration
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'registration'})
				-
					const registrationParams = {
						title: 'Регистрация аккаунта',
						textFieldParams1: {
							type: 'text',
							placeholder: 'Имя',
							name: 'default-input-name',
						},
						textFieldParams2: {
							type: 'text',
							placeholder: 'Фамилия',
							name: 'default-input-name',
						},
						radioButtonsParams: { 
							groupName: 'gender',
							inputs:[
								{id: 'radio3', value: 'мужчина'},
								{id: 'radio4', value: 'женщина'},
							]
						},
						label1: ({text: 'дата рождения'}),
						textFieldMaskedParams: {
							type: 'date',
							placeholder: '',
							name: 'default-input-name',
						},
						label2: ({text: 'данные для входа в сервис'}),
						textFieldParams3: {
							type: 'text',
							placeholder: 'Email',
							name: 'default-input-name',
						},
						textFieldParams4: {
							type: 'password',
							placeholder: 'Пароль',
							name: 'default-input-name',
						},
						toggleParams: {
							inputs:[
								{id: 'toggle3', name: 'getoffres', value: 'получать спецпредложения'},
							]
						},
						buttonArrowParams: {text: 'Перейти к оплате'},
						buttonLightParams: {text: 'Войти'},
					};
				+mixRegistration(registrationParams)

			//- booking
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'booking'})
				-
					const bookingParams = {
						//- data: { //данные о заказе - цена, скидки итд
						//-   number: '888',
						//-   type: 'Люкс',
						//-   price: '9990₽ ',
						//-   discountChild: '0.5',
						//-   discountBaby: '0.2',
						//-   serviceFee: '2179',
						//-   serviceFeeDiscount: '2179',
						//-   additionalServiceFee: '300',
						//- },
						dropdownSplitParams: {
							label1: 'Прибытие',
							label2: 'Выезд',
							inputs:[
								{id: 'inputdate5', name: 'date-from'},
								{id: 'inputdate6', name: 'date-to'},
							]
						},
						label1: ({text: 'гости'}),
						dropdownParams: {
							label: 'Гости',
							placeholder: 'Сколько гостей',
							type: '1', // с гостями
							inputNames: ['guests', 'children', 'babies']
						},
						buttonArrowParams: {text: 'Забронировать'},
					};
				+mixBooking(bookingParams)

			//- login
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'login'})
				-
					const loginParams = {
						title: 'Войти',

						textFieldParams3: {
							type: 'text',
							placeholder: 'Email',
							name: 'default-input-name',
						},

						textFieldParams4: {
							type: 'password',
							placeholder: 'Пароль',
							name: 'default-input-name',
						},

						buttonArrowParams: {text: 'Войти'},

						buttonLightParams: {text: 'Создать'},
					};
				+mixLogin(loginParams)

			//- product
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'product'})
				-
					const productParams = {
						buttonRateParams: {
							groupName: 'rating-888',
							inputIds: ['starrate6','starrate7','starrate8','starrate9','starrate10'],
