			//- text-field
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'Text field'})
				-
					const textFieldParams = {
						type: 'text',
						placeholder: 'Email (placeholder)',
						name: 'default-input-name',
					};
				+mixTextField(textFieldParams)

			//- text-field-masked
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'Masked text field'})
				-
					const textFieldMaskedParams = {
						type: 'date',
						placeholder: '',
						name: 'default-input-name',
					};
				+mixTextFieldMasked(textFieldMaskedParams)

			//- text-field-subscription
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'Subscription text field'})
				-
					const textFieldSubscriptionParams = {
						type: 'text',
						placeholder: 'Email (placeholder)',
						name: 'default-input-name',
					};
				+mixTextFieldSubscription(textFieldSubscriptionParams)

			//- dropdown - c гостями
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'Dropdown'})
				-
					const dropdownParams = {
						placeholder: 'Сколько гостей',
						type: '1', // с гостями
						inputNames: ['select-value1', 'select-value2', 'select-value3']
					};
				+mixDropdown(dropdownParams)

			//- dropdown - с параметрами номера
			.uikit-demo__item
				.uikit-demo__label-container
					+mixLabel({text: 'Dropdown (type2)'})
