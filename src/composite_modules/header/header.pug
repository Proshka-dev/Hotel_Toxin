//- Объявление миксина
mixin mixHeader(params)
	header.header
		.container
			.header__body
				img.header__logo(src="@img/Logo.svg", alt="")
				.header__menu
					+mixMenu()
				.header__logged-container
					.header__user
						button.header__username
				.header__unlogged-container
					.header__buttons
						.header__button-login
							+mixButtonLight(params.buttonLightParams)
						.header__button-register
							+mixButtonDark(params.buttonDarkParams)
					button.header__icon-login login
				button.header__burger menu
