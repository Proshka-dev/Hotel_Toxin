//- Объявление миксина
//- Параметры: vLabel, vType, vPlaceholder
mixin mixDropdown(vLabel, vPlaceholder)
  .dropdown
    .dropdown__label= vLabel
    .dropdown__container
      button.dropdown__button
        =vPlaceholder
      .dropdown__list
        .dropdown__item(data-id='1')
          .dropdown__text взрослые
          .dropdown__button-dec.dropdown__button-dec_inactive -
          .dropdown__value 0
          .dropdown__button-inc +
        .dropdown__item(data-id='2')
          .dropdown__text дети
          .dropdown__button-dec.dropdown__button-dec_inactive -
          .dropdown__value 0
          .dropdown__button-inc +
        .dropdown__item(data-id='3')
          .dropdown__text младенцы
          .dropdown__button-dec.dropdown__button-dec_inactive -
          .dropdown__value 0
          .dropdown__button-inc +
        .dropdown__buttons-container() 
          .dropdown__button-apply применить
          .dropdown__button-clear.dropdown__button-clear_inactive очистить
      input.dropdown__input(type='text' data-id='1' name='select-value1' value='0')
      input.dropdown__input(type='text' data-id='2' name='select-value2' value='0')
      input.dropdown__input(type='text' data-id='3' name='select-value3' value='0')

script(src='js/dropdown.js')
